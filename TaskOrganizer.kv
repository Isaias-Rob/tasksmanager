#:import Factory kivy.factory.Factory
<PopupError@Popup>:
    auto_dismiss: False
    size_hint: 0.6, 0.2
    pos_hint: {'x': 0.2, 'top': 0.9}
    title: 'Erro'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Nome n√£o pode ser vazio'
        Button:
            text:'Ok'
            font_size: 24
            on_release: root.dismiss()

<PopupDetalhes@Popup>:
    auto_dismiss: False
    size_hint: 0.8, 0.8
    pos_hint: {'center_x': 0.5}
    title: 'Detalhes da Tarefa'
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            Label:
                id: label_detalhes
                size_hint: 1, None
                text_size: self.width, None
                height: self.texture_size[1]
        Button:
            text:'Fechar'
            font_size: 24
            size_hint: 0.6,0.1
            pos_hint:{'center_x':0.5}
            on_release: root.dismiss()

<MenuInicial>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "Bem vindo!\nSeu organizador de tarefas!"
                size_hint: (0.3, 0.2)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}   
                halign: 'center'
                valign: 'middle'
        BoxLayout:
            orientation: 'horizontal'
            Button:
                id: button_ver_tarefas
                text: 'Ver Tarefas'
                size_hint: (0.3, 0.2)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press: 
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'TasksList'
                    app.root.get_screen('TasksList').build()
                    
            Button:
                id: button_nova_tarefa
                text: 'Nova tarefa'
                size_hint: (0.3, 0.2)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'CreateTask'
<TasksList>:
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            MDList:
                id: list_view
        Button:
            text:'Voltar'
            size_hint: (0.7, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release:
                root.destroy()
                root.manager.transition.direction = 'left'
                root.manager.current = 'MenuInicial'
<CreateTask>:
    FloatLayout:
        TextInput:
            id: nome_tarefa
            text: 'Nome da tarefa'
            multiline: False
            size_hint: (0.8,0.05)
            pos_hint: {'center_x': 0.5, 'y': 0.8}
            write_tab: False
        TextInput:
            id: descricao_tarefa
            text: 'Descricao da tarefa'
            size_hint: (0.8,0.5)
            pos_hint: {'center_x': 0.5, 'y':0.3}
        Button:
            text: 'Criar tarefa'
            size_hint: (0.4, 0.05)
            pos_hint: {'center_x': 0.25,'y':0.1}
            on_press:
                root.insert_task()
        Button:
            text: 'Cancelar'
            size_hint: (0.4, 0.05)
            pos_hint: {'center_x': 0.75,'y':0.1}
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'MenuInicial'